{
  "name": "t-platform-minimax",
  "version": "1.0.0",
  "description": "Android Device Testing Platform",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && npx esbuild electron/main.ts --bundle --outfile=dist/electron/main.js --platform=node --target=node18 --external:electron && node dist/electron/main.js",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "tsc -b && vite build",
    "build:electron": "esbuild electron/main.ts --bundle --outfile=dist/electron/main.js --platform=node --target=node18",
    "preview": "vite preview"
  },
  "dependencies": {
    "@ant-design/icons": "^5.6.1",
    "adbkit": "^2.11.1",
    "antd": "^6.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^27.3.9",
    "esbuild": "^0.19.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  }
}
